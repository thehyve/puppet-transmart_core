# DATA SOURCE CONFIGURATION
dataSources {
  dataSource {
<% case scope.lookupvar('::transmart_core::params::db_type') -%>
<% when 'postgresql' -%>
      driverClassName = 'org.postgresql.Driver'
      url = 'jdbc:postgresql://<%= scope.lookupvar('::transmart_core::params::dbhost') %>/<%= scope.lookupvar('::transmart_core::params::dbport') %>/<%= scope.lookupvar('::transmart_core::params::databasename') %>
      dialect = 'org.hibernate.dialect.PostgreSQLDialect'
<% when 'oracle' -%>
      driverClassName = 'oracle.jdbc.driver.OracleDriver'
      url = 'jdbc:oracle:thin:@<%= scope.lookupvar('::transmart_core::params::dbhost') %>:\
    <%= scope.lookupvar('::transmart_core::params::dbport') %>:\
    <%= scope.lookupvar('::transmart_core::params::databasename') %>
      dialect = 'org.hibernate.dialect.Oracle10gDialect'
<% else raise "Unknown database type. Check transmart_core::params::db_type" -%>
<% end -%>
      username = <%= scope.lookupvar('::transmart_core::params::db_user') %>
      password = '<%= scope.lookupvar('::transmart::params::db_password') -%>'
      dbCreate = 'none'
  }
}
